{
  "name": "aifawa-id-card-generator",
  "version": "1.5.0",
  "description": "Generate ID Cards for Aifawa Members",
  "license": "MIT",
  "author": "Kanhai Lal Murmu",
  "scripts": {
    "postinstall": "patch-package && npm run scss",
    "start": "npm run scss && node app.js",
    "dev": "npm run scss && nodemon app.js",
    "test": "nyc mocha --timeout=60000 --exit",
    "lint": "eslint \"**/*.js\"",
    "prepare": "husky install",
    "scss": "sass --no-source-map --load-path=./ --update ./public/css:./public/css",
    "lintStage": "node_modules/.bin/lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint -- --fix"
    ]
  },
  "pre-commit": "lint-staged",
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-flash": "^0.0.2",
    "express-rate-limit": "^6.8.1",
    "express-session": "^1.17.3",
    "html-pdf": "^3.0.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.2",
    "puppeteer": "^21.1.0",
    "qrcode": "^1.5.3",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.28.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^8.13.0",
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "6.0.6"
    }
  },
  "engines": {
    "node": ">=18"
  }
}
